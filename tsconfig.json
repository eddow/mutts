{
	"compilerOptions": {
		"moduleResolution": "Node",
		"target": "ES2020",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"declarationDir": "./dist",
		"rootDir": "./src",
		"experimentalDecorators": false,
		"emitDecoratorMetadata": false,
		"strict": false,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"composite": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"tslib": [
				"./node_modules/tslib/tslib.d.ts"
			],
			"~/*": [
				"./packages/*"
			]
		},
		"resolveJsonModule": true,
		"types": [
			"node",
			"vitest/globals"
		]
	},
	"include": [
		"src/**/*",
		"package.json",
		"tests/zone.test.ts"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"node_modules",
		"dist",
		"tests/**"
	]
}